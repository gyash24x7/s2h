generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
    id                  String          @id @default(auto()) @map("_id") @db.ObjectId
    name                String
    email               String          @unique
    avatar              String
    salt                String          @unique

    litGamesCreated     LitGame[]       @relation("LitGameCreatedBy")
}

enum LitGameStatus {
    NOT_STARTED
    PLAYERS_READY
    TEAMS_CREATED
    IN_PROGRESS
    COMPLETED
}

enum LitMoveType {
    ASK
    DECLINED
    GIVEN
    TURN
    CALL
    CALL_SUCCESS
    CALL_FAIL
}

enum CardRank {
	ACE
	TWO
	THREE
	FOUR
	FIVE
	SIX
	SEVEN
	EIGHT
	NINE
	TEN
	JACK
	QUEEN
	KING
}

enum CardSuit {
	HEARTS
	CLUBS
	SPADES
	DIAMONDS
}

enum CardSet {
	SMALL_DIAMONDS
	BIG_DIAMONDS
	SMALL_HEARTS
	BIG_HEARTS
	SMALL_SPADES
	BIG_SPADES
	SMALL_CLUBS
	BIG_CLUBS
}

type DisplayCard {
    rank            CardRank
    suit            CardSuit
}

type LitTeam {
    id          String          @default(cuid())
    name        String
    score       Int             @default(0)
    players     String[]
}

type LitPlayer {
    id              String      @default(cuid())
    name            String
    hand            DisplayCard[]
    avatar          String
    userId          String
    teamId          String?
}

type LitMove {
    type              LitMoveType
    askedFor          DisplayCard?
    callingSet        CardSet?
    turnId            String?
    askedFromId       String?
    askedById         String?
    createdAt         DateTime        @default(now())
}

model LitGame {
    id            String          @id @default(auto()) @map("_id") @db.ObjectId
    code          String          @unique
    status        LitGameStatus   @default(NOT_STARTED)
    playerCount   Int             @default(2)

    createdBy     User            @relation("LitGameCreatedBy", fields:[createdById], references:[id])
    createdById   String          @db.ObjectId

    createdAt     DateTime        @default(now())
    updatedAt     DateTime        @updatedAt

    players       LitPlayer[]
    teams         LitTeam[]
    moves         LitMove[]
}